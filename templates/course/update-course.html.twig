{% extends 'base.html.twig' %}

{% block title %}Update Course{% endblock %}

{% block body %}
<h1>Update {{course.title}}</h1>
<form method="post">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" class="form-control" value="{{course.title}}">
    <label for="subject">Subject</label>
    <input type="text" name="subject" id="subject" class="form-control" value="{{course.subject}}">
    <label for="content">Content</label>
    <textarea type="text" name="content" id="content" class="form-control">
{{course.content}}
    </textarea>
    <button class="btn btn-primary">Update</button>
</form>
{% endblock %}